{% extends "layouts/master.twig" %}

{% block title %}Search{% endblock %}

{% block styles %}
    <link href="{{ '/vendor/css/select2.min.css' }}" rel="stylesheet" type="text/css"/>
{% endblock styles %}

{% block content %}
    <section id="two row">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="margin-top-0 text-primary">Search By Keyword</h2>
                <hr class="primary">
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12 col-md-12 text-center">
                <form class="form" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-lg btn-default">Submit</button>
                </form>
            </div>
        </div>
        <br/>
        <br/>
        <br/>

        <div class="container">
            <div class="top30"></div>
            <div class="row">
                <div class="top30"></div>
                <div class="col-lg-12 text-center">
                    <h2 class="margin-top-0 text-primary">Search By Filters</h2>
                    <hr class="primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12 col-md-12 text-left">
                    <form class="form-horizontal">
                        <fieldset>

                            <div class="form-group col-md-4">
                                <label for="select" class="col-lg-2 control-label">Districts</label>
                                <div class="col-lg-10">
                                    <select class="form-control select2" id="districts">
                                    </select>
                                    <br>
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="select" class="col-lg-2 control-label">Profiles</label>
                                <div class="col-lg-10">
                                    <select class="form-control select2" id="profiles">
                                    </select>
                                    <br>
                                </div>
                            </div>

                            <div class="form-group col-md-4">
                                <label for="select" class="col-lg-2 control-label">Categories</label>
                                <div class="col-lg-10">
                                    <select class="form-control select2" id="categories">
                                    </select>
                                    <br>
                                </div>
                            </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="table table-striped">
                <a href="#" class="list-group-item">
                    <table class="table table-bordered">
                        <tbody>
                        {% for funding in funds %}
                            <tr>
                                <th>Title:</th>
                                <li>{{ user.username|e }}</li>
                            </tr>
                            <tr>
                                <th>Description:</th>
                                <li>{{ user.username|e }}</li>
                            </tr>
                            <tr>
                                <td>Link:</td>
                                <li>{{ user.username|e }}</li>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </a>
            </div>
        </div>
    </section>
{% endblock %}

    {% block scripts %}
        <script src="{{ '/vendor/js/select2.min.js' }}" type="text/javascript"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $(".select2").select2();
            });
        </script>

        <script src="{{ '/js/search/district.js' }}" type="text/javascript"></script>
        <script src="{{ '/js/search/profile.js' }}" type="text/javascript"></script>
        <script src="{{ '/js/search/category.js' }}" type="text/javascript"></script>
        <script src="{{ '/js/search/display.js' }}" type="text/javascript"></script>
    {% endblock %}
