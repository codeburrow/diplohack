{% extends "layouts/master.twig" %}

{% block header %}
    <header style="background: url(img/texture.jpg) no-repeat center center scroll;" id="first">
        <div class="header-content">
            <div class="inner">
                <h1 class="cursive">Direct_Access</h1>
                <h4>Your #1 Choice for <i><u>Funding</u></i></h4>
                <hr>
                <a href="#aboutModal" id="toggleVideo" data-toggle="modal" class="page-scroll btn btn-warning btn-xl">Learn
                    More
                </a>
                &nbsp;
                <a href="{{ '/search' }}" class="btn btn-warning btn-xl page-scroll">Get Funding
                    Now
                </a>
            </div>
        </div>
        {#<video autoplay="" loop="" class="fillWidth fadeIn wow collapse in" data-wow-delay="0.5s"#}
