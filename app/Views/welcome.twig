{% endblock header %}

{% block content %}
    <section id="two">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="margin-top-0 text-primary">Targeted Search</h2>
                    <hr class="primary">
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <a href="{{ 'http://diplohack.herokuapp.com/search' }}">
                    <div class="col-lg-4 col-md-4 text-center">
                        <div class="feature">
                            <i class="fa fa-5x fa-industry"></i>
                            <h3>Industry</h3>
                            <p class="text-muted">R&D, Environment, Agriculture, etc.</p>
                        </div>
                    </div>
                </a>
                <a href="{{ 'http://diplohack.herokuapp.com/search' }}">
                    <div class="col-lg-4 col-md-4 text-center">
                        <div class="feature">
                            <i class="fa fa-5x fa-users"></i>
                            <h3>Profile</h3>
                            <p class="text-muted">NGO, Startup, Individual, etc.</p>
                        </div>
                    </div>
                </a>
                <a href="{{ '/search' }}">
                    <div class="col-lg-4 col-md-4 text-center">
                        <div class="feature">
                            <i class="fa fa-5x fa-map-marker"></i>
                            <h3>District</h3>
                            <p class="text-muted">Attiki, Crete, Macedonia, etc.</p>
                        </div>
                    </div>
                </a>
            </div>
        </div>
    </section>
    <aside class="bg-dark">
        <div class="container text-center">
            <div class="call-to-action">
