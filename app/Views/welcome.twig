{% extends "layouts/master.twig" %}

{% block title %}Search{% endblock %}

{% block styles %}
    <link href="{{ '/vendor/css/select2.min.css' }}" rel="stylesheet" type="text/css"/>
{% endblock styles %}

{% block content %}
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                        data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Brand</a>
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div>
        </div>
    </nav>

    <form class="form-horizontal">
        <fieldset>
            <legend>Criteria</legend>

            <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Districts</label>
                <div class="col-lg-10">
                    <select class="form-control select2" id="districts">
                    </select>
                    <br>
                </div>
            </div>

            <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Profiles</label>
                <div class="col-lg-10">
                    <select class="form-control select2" id="profiles">
                    </select>
                    <br>
                </div>
            </div>

            <div class="form-group">
                <label for="select" class="col-lg-2 control-label">Categories</label>
                <div class="col-lg-10">
                    <select class="form-control select2">
                        <option>1</option>
                        <option>2</option>
                    </select>
                    <br>
                </div>
            </div>
        </fieldset>
    </form>
{% endblock %}

{% block scripts %}
    <script src="{{ '/vendor/js/select2.min.js' }}" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(".select2").select2();
        });
    </script>

    <script src="{{ '/js/search/district.js' }}" type="text/javascript"></script>
    <script src="{{ '/js/search/profile.js' }}" type="text/javascript"></script>
{% endblock %}
